<h1>Posts#show</h1>

<table>
  <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan='3'></th>
    </tr>

  <% @user.posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>

  <% end %>
</table>
